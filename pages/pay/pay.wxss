/* pages/pay/pay.wxss */
@import '../../assets/font/iconfont.wxss';
.goods-wrapper{
  margin-bottom: 25rpx;  
}
.goods-item-wrapper{
  display: flex;
  align-items: center;
  padding: 37rpx 26rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #b5b5b5;
  font-size: 28rpx;
}
.goods-item-wrapper:last-child{
  border-bottom: none;
}
.goods-item-image-wrapper{
  flex-shrink: 0;
  margin-right: 26rpx;
  height: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.goods-item-image{
  width: 120rpx;
  height: 120rpx;
}
.goods-item-goods{
  flex: 1;
}
.goods-item-count{
  margin: 0 20rpx;
  font-weight: 700;
}
.goods-item-price-wrapper{
  position: relative;
  flex-basis: 120rpx;
  text-align: right;
  font-weight: 700;  
  
}
.btm-price,.btm-price-val{
  position: absolute;
  bottom: -20rpx;
  right: 0;
  font-size: 18rpx;
  color: #a0a0a0;
  text-decoration: line-through;
}
.price-wrapper{
  background-color: #fff;
}
.price-detail-wrapper{
  padding: 44rpx 26rpx;  
  font-size: 27rpx;
}
.price-detail-item-wrapper{
  display: flex;
  margin-bottom: 51rpx;  
}
.price-detail-item-wrapper:last-child{
  margin-bottom: 0;
}
.price-payprice-wrapper{
  display: flex;
  padding: 44rpx 26rpx;    
  font-size: 32rpx;
  font-weight: 700;  
}
.price-key{
  flex: 1;
}
.price-val-wrapper{
  position: relative;
  font-weight: 700;
}
.price-val{
  font-weight: 700;
}
.tips-wrapper{
  margin-top: 36rpx;
  font-size: 25rpx;
  text-align: center;
}
.pay-wrapper{
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 125rpx;
  font-size: 32rpx;  
  font-weight: 700;
}
.pay-left-wrapper{
  flex: 3;
  background-color: #fff;
  text-align: center;
  line-height: 125rpx;
}
.pay-left-price{
  margin-left: 8rpx;
  font-size: 20rpx;
  text-decoration: line-through;
  color: #a0a0a0;
}
.pay-right-wrapper{
  flex: 2;
  text-align: center;
}
.pay-btn{
  color: #fff;
  border-radius: 0;
  font-size: 35rpx;
  line-height: 125rpx;
}
button[disabled][type="default"], wx-button[disabled]:not([type]) {
  background-color:#fe2d4c;
  color: #fff;
}
.price-total-wrapper{
  background-color: #fff;
  margin-bottom: 25rpx;
}
.icon-you {
  padding-left: 5rpx;
  font-weight: 700;
}
.no-coupon-text{
  color: #999;
}