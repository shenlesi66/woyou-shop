/* pages/shopcart/shopcart.wxss */
@import '../../assets/font/iconfont.wxss';
page{
  height: 100%;
}
.content{
  height: 100%;
}
.icon-cart{
  height: 60rpx;
  width: 60rpx;
}
.icon-ipt{
  margin: 0 20rpx;
  height: 60rpx;
  width: 140rpx;
}
.code-wrapper{
  display: flex; 
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  padding: 0 27rpx;
  width: 100%;
  height: 104rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #b5b5b5;
  z-index: 99;
}
.qr-wrapper{
  display: flex;
  align-items: center;
  flex: 1;
}
.manual-wrapper{
  flex-basis: 100rpx; 
  text-align: right;
}
.icon-dianpu{
  margin-right: 30rpx;
  font-size: 46rpx;
}
.icon-tiaoxingma{
  font-size: 60rpx;
}
.qr-text{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.nogoods-wrapper{
   height: 100%; 
}
.fictitious-keyborad-block {
  height: 106rpx;
}
.nogoods-bg-wrapper{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%; 
}
.nogoods-bg-img{
  width: 655rpx; 
  height:  700rpx; 
}
.nogoods-bg-text{
  margin-top: 35rpx;
  color: #424242;
  font-size: 28rpx;
}
.nogoods-bg-btn{
  display: flex;
  margin-top: 53rpx;
  padding: 0 50rpx;
  align-items: center;
  height: 87rpx;
  color: #fff;
  font-size: 28rpx;
}
.goodslist-wrapper{
  padding-top: 105rpx;
  padding-bottom: 208rpx;
}
.goods-wrapper{
  position: relative;
  padding: 46rpx 37rpx;
  border-bottom: 1rpx solid #f7f7f7;
  background-color: #fff;
}
.goods-wrapper:last-child{
  border-bottom: none;  
}
.goods-info-wrapper{
  display: flex;
  /* height: 120rpx; */
}
.goods-detail-wrapper{
  margin-top: 18rpx;
}
.goods-img-wrapper{
  position: relative;
  flex-shrink: 0;
  margin-right: 26rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.goods-img{
  width: 120rpx;
  height: 120rpx;
}
.tag-wrapper {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 10rpx;
  width: 33rpx;
  height: 40rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}
.tag-text{
  font-size: 18rpx;
  font-weight: 700;
  color: #fff;
  text-align: center;
}
.tag-text:last-child{
  margin-top: -4rpx;
}
.goods-name{
  margin-bottom: 2rpx;
  font-size: 27rpx;
}
.goods-spec{
  display: block;
  margin-bottom: 22rpx;  
  font-size: 21rpx;
}
.money-text{
  margin-right: -2rpx;
  font-size: 24rpx;
}
.goods-right-price{
  margin-left: 14rpx;
  font-size: 20rpx;
  color: #ababab;
  text-decoration: line-through;
}
.goods-left-price{
  font-size: 36rpx;
}
.goods-cartcontrol-wrapper{
  position: absolute;
  height: 60rpx;
  bottom: 14rpx;
  right: 28rpx;
}
.goods-cartnum{
  position: absolute;
  right: 80rpx;
  top: 0;
  margin: 0 20rpx;
  width: 100rpx;
  height: 60rpx;
  border-radius: 25rpx;
  text-align: center;
  vertical-align: top;
}
.cartcontrol-wrapper{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;  
  font-size: 35rpx;
  z-index: 99;
}
.cartcontrol-top-wrapper{
  height: 104rpx;  
  line-height: 104rpx;
  border-radius: 0;
  background-color: #fff;
  text-align: center;
}
.cartcontrol-btm-wrapper{
  display: flex;
}
.cartcontrol-btm-left{
  flex: 1;
}
.cartcontrol-btm-right{
  flex: 1;
}
.cartcontrol-btm-left-btn{
  height: 104rpx;  
  line-height: 104rpx;
  border-radius: 0;
  color: #fff;
  background-color: #ffb400;
  font-size: 35rpx;
}
.cartcontrol-btm-right-btn{
  height: 104rpx;  
  line-height: 104rpx;
  border-radius: 0;
  color: #fff;
  font-size: 35rpx;
}