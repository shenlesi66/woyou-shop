/* pages/shopcart/shopcart.wxss */
@import '../../assets/font/iconfont.wxss';
page{
  height: 100%;
}
.content{
  height: 100%;
}
.icon-cart{
  height: 60rpx;
  width: 60rpx;
}
.icon-ipt{
  margin: 0 20rpx;
  height: 60rpx;
  width: 140rpx;
}
.code-wrapper{
  display: flex; 
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  padding: 0 27rpx;
  width: 100%;
  height: 104rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #b5b5b5;
  z-index: 99;
}
.qr-wrapper{
  display: flex;
  align-items: center;
  flex: 1;
}
.manual-wrapper{
  flex-basis: 100rpx; 
  text-align: right;
}
.icon-dianpu{
  margin-right: 30rpx;
  font-size: 46rpx;
}
.icon-tiaoxingma{
  font-size: 60rpx;
}
.qr-text{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.nogoods-wrapper{
   height: 100%; 
}
.fictitious-keyborad-block {
  height: 106rpx;
}
.nogoods-bg-wrapper{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%; 
}
.nogoods-bg-img{
  width: 655rpx; 
  height:  700rpx; 
}
.nogoods-bg-text{
  margin-top: 35rpx;
  color: #424242;
  font-size: 28rpx;
}
.nogoods-bg-btn{
  display: flex;
  margin-top: 53rpx;
  padding: 0 50rpx;
  align-items: center;
  height: 87rpx;
  color: #fff;
  font-size: 28rpx;
}
.goodslist-wrapper{
  padding-top: 105rpx;
  padding-bottom: 208rpx;
}
.goods-wrapper{
  padding: 29rpx 28rpx 15rpx 29rpx;
  border-bottom: 1rpx solid #f7f7f7;
  background-color: #fff;
}
.goods-wrapper:last-child{
  border-bottom: none;  
}
.goods-name{
  display: block;
  margin-bottom: 19rpx;
  font-size: 28rpx;
}
.goods-spec{
  display: block;
  margin-bottom: 22rpx;  
  font-size: 21rpx;
}
.goods-price{
  display: block;  
  margin-bottom: 22rpx;    
  font-size: 28rpx;
}
.goods-cartcontrol-wrapper{
  position: relative;
  height: 60rpx;
  text-align: right;
}
.goods-cartnum{
  position: absolute;
  right: 80rpx;
  top: 0;
  margin: 0 20rpx;
  width: 100rpx;
  height: 60rpx;
  border-radius: 25rpx;
  text-align: center;
  vertical-align: top;
}
.cartcontrol-wrapper{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;  
  font-size: 35rpx;
  z-index: 99;
}
.cartcontrol-top-wrapper{
  height: 104rpx;  
  line-height: 104rpx;
  border-radius: 0;
  background-color: #fff;
  text-align: center;
}
.cartcontrol-btm-wrapper{
  display: flex;
}
.cartcontrol-btm-left{
  flex: 1;
}
.cartcontrol-btm-right{
  flex: 1;
}
.cartcontrol-btm-left-btn{
  height: 104rpx;  
  line-height: 104rpx;
  border-radius: 0;
  color: #fff;
  background-color: #ffb400;
  font-size: 35rpx;
}
.cartcontrol-btm-right-btn{
  height: 104rpx;  
  line-height: 104rpx;
  border-radius: 0;
  color: #fff;
  font-size: 35rpx;
}